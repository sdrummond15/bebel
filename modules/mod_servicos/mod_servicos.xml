    <version>1.0.1</version>
    <description>MOD_SERVICOS_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_servicos">mod_servicos.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>		
        <filename>mod_servicos.xml</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="titulo" 
                       type="text"
                       size="10"
                       label="Título"
                />
                <field name="catid" 
                       type="category" 
                       extension="com_content"
                       label="Categoria"
                />
                <field
                    name="qtdserv"
                    type="text"
                    size="10"
                    default="1"
                    label="Qtd Serviços"
                />
            </fieldset>
        </fields>
    </config>
